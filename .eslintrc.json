{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "globals": {
    "elements": "readonly",
    "API_BASE_URL": "readonly",
    "TOTAL_POKEMON": "readonly",
    "POKEMON_PER_PAGE": "readonly",
    "GENERATIONS": "readonly"
  }
}
